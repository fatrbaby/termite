{
  "name": "fatrbaby/termite",
  "description": "simple file & path toolkit",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Fatrbaby\\Termite\\": "src/"
    }
  },
  "authors": [
    {
      "name": "fatrbaby",
      "email": "mrfatr@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "suggest": {
    "ext-posix": "For a more accurate platform detection function"
  },
  "require-dev": {
    "pestphp/pest": "^4.1",
    "laravel/pint": "^1.25"
  }
}
